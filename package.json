{
  "name": "structura-code-reorder",
  "displayName": "Structura - Drag & Drop Code Refactor",
  "description": "Reorder functions and classes by dragging them in the sidebar",
  "version": "0.0.1",
  "publisher": "structura-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/structura"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onView:structuraView"
  ],
  "main": "./out/extension.js",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "structura",
          "title": "Structura",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "structura": [
        {
          "id": "structuraView",
          "name": "Structure"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.3"
  }
}
