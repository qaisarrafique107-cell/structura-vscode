{
  "name": "structura-code-reorder",
  "displayName": "Structura - Drag & Drop Code Refactor",
  "description": "Reorder functions and classes by dragging them in the sidebar",
  "version": "3.0.0",
  "publisher": "ByQaisar",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onView:structuraView",
    "onCommand:structura.moveFunctionTo",
    "onCommand:structura.extractToNewFile",
    "onCommand:structura.duplicateToFile",
    "onCommand:structura.moveUp",
    "onCommand:structura.moveDown",
    "onCommand:structura.moveToTop",
    "onCommand:structura.moveToBottom",
    "onCommand:structura.refresh"
  ],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/byqaisar1/structura-vscode"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "structura",
          "title": "Structura",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "structura": [
        {
          "id": "structuraView",
          "name": "Structure"
        },
        {
          "id": "structuraInsights",
          "name": "Refactoring Insights"
        }
      ]
    },
    "commands": [
      {
        "command": "structura.moveFunctionTo",
        "title": "Move Function to...",
        "icon": "$(arrow-right)"
      },
      {
        "command": "structura.extractToNewFile",
        "title": "Extract to New File...",
        "icon": "$(file-add)"
      },
      {
        "command": "structura.duplicateToFile",
        "title": "Duplicate to File...",
        "icon": "$(copy)"
      },
      {
        "command": "structura.moveUp",
        "title": "Move Up",
        "icon": "$(arrow-up)"
      },
      {
        "command": "structura.moveDown",
        "title": "Move Down",
        "icon": "$(arrow-down)"
      },
      {
        "command": "structura.moveToTop",
        "title": "Move to Top",
        "icon": "$(arrow-up)"
      },
      {
        "command": "structura.moveToBottom",
        "title": "Move to Bottom",
        "icon": "$(arrow-down)"
      },
      {
        "command": "structura.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "structura.smartUndo",
        "title": "Smart Undo",
        "icon": "$(discard)"
      },
      {
        "command": "structura.smartRedo",
        "title": "Smart Redo",
        "icon": "$(redo)"
      },
      {
        "command": "structura.showUndoHistory",
        "title": "Show Undo History",
        "icon": "$(history)"
      },
      {
        "command": "structura.analyzeWorkspace",
        "title": "Analyze Workspace",
        "icon": "$(search)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "structura.refresh",
          "when": "view == structuraView",
          "group": "navigation"
        },
        {
          "command": "structura.analyzeWorkspace",
          "when": "view == structuraInsights",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "structura.moveFunctionTo",
          "when": "view == structuraView && viewItem == symbol",
          "group": "inline@1"
        },
        {
          "command": "structura.extractToNewFile",
          "when": "view == structuraView && viewItem == symbol",
          "group": "inline@2"
        },
        {
          "command": "structura.duplicateToFile",
          "when": "view == structuraView && viewItem == symbol",
          "group": "inline@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "structura.moveUp",
        "key": "ctrl+shift+up",
        "mac": "cmd+shift+up",
        "when": "editorTextFocus"
      },
      {
        "command": "structura.moveDown",
        "key": "ctrl+shift+down",
        "mac": "cmd+shift+down",
        "when": "editorTextFocus"
      },
      {
        "command": "structura.moveToTop",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "structura.moveToBottom",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-typescript": "^0.23.2"
  }
}